@{
    ViewData["Title"] = "Pagar Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model UCABPagaloTodoWeb.Models.AddPaymentContractViewModel

<form asp-action="AddPaymentContractAction" asp-controller="AddPayment" method="post">
    <div>
        <input type="hidden" id="_ServiceId" name="_ServiceId" value="@Model.ServiceId"/>
    </div>
    <div>
        <label for="serviceName">Servicio:</label>
        <input type="text" id="_ServiceName" name="_ServiceName" value="@Model.ServiceName" readonly />
    </div>
    <div>
        <input type="hidden" id="_UserId" name="_UserId" value="@Model.UserId" readonly />
    </div>
    <div>
        <label for="paymentOption">Payment Option:</label>
        <select id="_OptionId" name="_OptionId">
            @foreach (var option in Model.PaymentOption)
            {
                <option value="@option.PaymentOptionId">@option.PaymentOptionName</option>
            }
        </select>
    </div>
    <div>
        <label for="contractNumber">Contract Number:</label>
        <input type="text" id="_ContractNumber" name="_ContractNumber" />
    </div>
    <div>
        <<label for="amount">Amount:</label>
        <input type="number" id="_Amount" name="_Amount" step="0.01" />
    </div>
    <button type="submit">Add Payment</button>
</form>

