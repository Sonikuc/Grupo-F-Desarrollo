@model UCABPagaloTodoWeb.Models.UpdateUserViewModel
@{
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

<div class="col-md-12 col-sm-12">
    <div class="col-md-4">
        <form asp-action="Update" asp-controller="User" method="post">
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" name="Name" class="form-control" placeholder="Nombre" value="@Model.Name">
                @Html.ValidationMessageFor(m => m.UserName ,null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Apellido</label>
                <input type="text" name="Lastname" class="form-control" placeholder="Apellido" value="@Model.Lastname">
                @Html.ValidationMessageFor(m => m.UserName ,null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Usuario</label>
                <input type="text" name="UserName" class="form-control" placeholder="Usuario" value="@Model.UserName">
                @Html.ValidationMessageFor(m => m.UserName ,null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>E-mail</label>
                <input type="email" name="_email" class="form-control" placeholder="Email" value="@Model.Email">
                @Html.ValidationMessageFor(m => m.Email ,null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Número de Teléfono</label>
                <input type="text" name="PhoneNumber" class="form-control" placeholder="Numero" value="@Model.PhoneNumber"
                data-val-regex-pattern="^[0-9]*$" data-val-regex="El número de teléfono debe ser un valor numérico." data-val-length-min="11" data-val-length-max="15"
                data-val-length="La longitud del número de teléfono debe estar entre 11 y 15 caracteres.">
                @Html.ValidationMessageFor(m => m.PhoneNumber ,null, new { @class = "text-danger" })
            </div>
            <div class="botones">
                <button type="submit" class="btn btn-success">Guardar Cambios</button>
                <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Index">Cancelar</a>
            </div>
        </form>
        <p>@ViewBag.Error</p>
    </div>
</div>