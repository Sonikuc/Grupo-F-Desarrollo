@model UCABPagaloTodoWeb.Models.InsertEmailModel

@{
    ViewData["Title"] = "¿Olvido su Contraseña?";
}


<h2>Recuperar contraseña</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SendEmail" asp-controller="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="Email"></label>
                <input class="form-control" id="email" name="email" type="text" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Enviar </button>
            <a class="btn btn-secondary" href="@Url.Action("LoginView", "Login")">Regresar</a>
        </form>
    </div>
</div>