@{
    ViewData["Tittle"] = "AdminUser Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<AllUsersViewModel>

<h1>Listado de usuarios</h1>

<style>
    .user-table {
        border-collapse: collapse;
    }

        .user-table th, .user-table td {
            padding: 10px;
            border: 1px solid #ccc;
        }
</style>

<table class="user-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Username</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Dni</td>
                <td>@user.Name</td>
                <td>@user.Username</td>
                <td>
                    <form action="/Admin/UpdateUserViewAdmin" method="post">
                        
                        <input type="hidden" name="username" value="@user.Username" />
                        <button type="submit" asp-route-username="@user.Username">Editar</button>
                    </form>
                    <a href="/ChangeUserStatus/ChangeUserStatusView?username=@user.Username">Cambiar Estado</a>
                </td>
            </tr>
        }
    </tbody>
</table>