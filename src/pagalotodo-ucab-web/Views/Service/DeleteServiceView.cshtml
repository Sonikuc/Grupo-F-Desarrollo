@{
    Layout = null;
}
@model UCABPagaloTodoWeb.Models.DeleteServiceViewModel

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div class="col-md-12 col-sm-12">
    <div class="col-md-4">
        <h1>Eliminar Servicio</h1>
        <p>¿Estás seguro que deseas eliminar el servicio @Model.ServiceName?</p>
        <form asp-action="DeleteService" asp-controller="Service" method="post">
            <div class="form-group">
                <label>Service Name:</label>
                <p>@Model.ServiceName</p>
                <input type="hidden" name="ServiceName" value="@Model.ServiceName" />
            </div>
            <div class="form-group">
                <label>Provider:</label>
                <p>@Model.Provider</p>
                <input type="hidden" name="Provider" value="@Model.Provider" />
            </div>
            <div class="botones">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a class="btn btn-default" asp-area="" asp-controller="Admin" asp-action="AdminHomeView">Cancelar</a>
            </div>
        </form>
        <p>@ViewBag.Error</p>
    </div>
</div>
